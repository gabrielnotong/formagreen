{% extends 'base.html.twig' %}

{% block title %}Training center list{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-primary font-weight-bold">Training centers management</h1>

        {% include 'admin/partials/search.html.twig' %}

        <table class="table table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Company name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Training center type</th>
                <th class="text-right">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for member in paginator.data %}
                <tr>
                    <td>{{ member.id }}</td>
                    <td>{{ member.companyName }}</td>
                    <td>{{ member.address }}</td>
                    <td>{{ member.email }}</td>
                    <td>{{ member.centerType }}</td>
                    <td class="actions text-right">
                        <a  href="{{ path('admin_members_prestations', {id: member.id}) }}"
                            class="btn btn-light btn-sm mr-1"
                            title="Prestations of: {{ member.companyName }}">
                            <i class="fa fa-map-marked-alt text-primary"></i>
                        </a>
                        {% include 'admin/partials/member_actions.html.twig' with {'member': member} %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ paginator.render() }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('search') }}
{% endblock %}

