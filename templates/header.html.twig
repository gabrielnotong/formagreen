                <a href="{{ path('homepage') }}" target="_blank" class="nav-link">
                    <i class="fas fa-eye text-primary"></i>
                    Visit website
                </a>
            </li>

            {% set u = app.user %}
            {% if u %}
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                        <i class="fa fa-user-circle text-success"></i>&nbsp;{{ u }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right rounded-0 border-top-0"
                         aria-labelledby="accountDropdownLink">

                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_trainings_index') }}" class="dropdown-item text-primary">
                                <i class="fa fa-cog mr-1"></i> Administration
                            </a>
                        {% endif %}

                        <div class="dropdown-divider"></div>
                        <a href="{{ path( u.getType() ~ '_me') }}" class="dropdown-item text-black-50">
                            <i class="fa fa-id-badge mr-1"></i> My Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="{{ path('account_password') }}" class="dropdown-item text-warning">
                            <i class="fa fa-key mr-1"></i> Change my password
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="{{ path('account_logout') }}" class="dropdown-item text-danger">
                            <i class="fa fa-power-off mr-1"></i> Logout
