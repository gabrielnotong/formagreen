{% extends 'pub/base.html.twig' %}

{% block title %}My profile!{% endblock %}

{% block body %}
    <div class="container">
        <div class="card rounded-0">
            <div class="card-body">
                <div class="row align-items-center mb-5">
                    <div class="col-3 text-center p-xl-5">
                        <i class="fa fa-user fa-10x"></i>
                        <br>
                        <p class="mt-3">
                            <strong>{{ user }}</strong>
                            <br>
                            <i class="fa {{ user.isActive ? 'fa-toggle-on text-success' : 'fa-toggle-off text-danger'  }} fa-2x"></i>
                        </p>
                    </div>
                    <div class="col-9">
                        <h1 class="text-center">Information</h1>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="alert alert-light rounded-0">
                                    <h4 class="alert-heading">Email</h4>
                                    <hr>
                                    {{ user.email }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="alert alert-light rounded-0">
                                    <h4 class="alert-heading">Phone number</h4>
                                    <hr>
                                    {{ user.phoneNumber }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="alert alert-light rounded-0">
                                    <h4 class="alert-heading">QRCode Identification</h4>
                                    <hr>
                                    <img class="text-center" src="{{ qr_code_data_uri(user.qrCode, { writer: 'svg', size: 150 }) }}" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-success mb-2 mr-2">Edit my profile</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Change my password</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
