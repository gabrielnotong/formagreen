{% extends 'pub/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path('account_login') }}" method="post">
            <div class="card rounded-0">
                <h1 class="card-header font-weight-bold text-center text-primary">Connexion</h1>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-3">&nbsp;</div>
                        <div class="col-md-6">
                            <div class="bg-light p-3">
                                {% if hasError %}
                                    <div class="alert alert-danger">
                                        {{ error }}
                                    </div>
                                {% endif %}
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <div class="col-10">
                                        <input type="text"
                                               class="form-control"
                                               id="email"
                                               name="_username"
                                               placeholder="Your email address..."
                                               value="{{ lastUsername }}"
                                               required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <div class="col-10">
                                        <input type="password"
                                               class="form-control"
                                               id="password"
                                               name="_password"
                                               placeholder="Your password..."
                                               required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted rounded-0">
                    <button type="submit" class="btn btn-success float-right">
                        <i class="fas fa-save mr-1"></i>Login
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
